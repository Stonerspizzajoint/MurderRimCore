<Defs>
<!--Hardware baised genes-->
	<VREAndroids.AndroidGeneDef Name="MRC_HardwareBase" Abstract="True">
		<displayCategory>WorkerDroneHardware</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
	</VREAndroids.AndroidGeneDef>

    <VREAndroids.AndroidGeneDef ParentName="MRC_HardwareBase" Name="MRC_HardwareNoVEF" Abstract="True">
	    <modExtensions>
            <li Class="VEF.Genes.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Hardware</backgroundPathXenogenes>
                <backgroundPathEndogenes>UI/Icons/Genes/GeneBackground_Hardware</backgroundPathEndogenes>
            </li>
        </modExtensions>
    </VREAndroids.AndroidGeneDef>

<!--Subroutine based genes-->
	<VREAndroids.AndroidGeneDef Name="MRC_SubroutineBase" Abstract="True">
		<displayCategory>WorkerDroneSubroutines</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
	</VREAndroids.AndroidGeneDef>

    <VREAndroids.AndroidGeneDef ParentName="MRC_SubroutineBase" Name="MRC_SubroutineNoVEF" Abstract="True">
	    <modExtensions>
            <li Class="VEF.Genes.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Subroutine</backgroundPathXenogenes>
                <backgroundPathEndogenes>UI/Icons/Genes/GeneBackground_Subroutine</backgroundPathEndogenes>
            </li>
        </modExtensions>
    </VREAndroids.AndroidGeneDef>
    
<!--Cosmetic based genes-->
	<VREAndroids.AndroidGeneDef Name="MRC_CosmeticBase" Abstract="True">
		<displayCategory>DroneCosmetics</displayCategory>
		<canGenerateInGeneSet>false</canGenerateInGeneSet>
	</VREAndroids.AndroidGeneDef>

	<VREAndroids.AndroidGeneDef ParentName="MRC_CosmeticBase" Name="MRC_EyeColorBase" Abstract="True">
        <prerequisite>MRWD_DroneBody</prerequisite>
        <iconPath>UI/Icons/Genes/Gene_Display</iconPath>
        <isCoreComponent>false</isCoreComponent>
        <exclusionTags>
            <li>EyeColor</li>
        </exclusionTags>
        <modExtensions>
            <li Class="VEF.Genes.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Hardware</backgroundPathXenogenes>
                <backgroundPathEndogenes>UI/Icons/Genes/GeneBackground_Hardware</backgroundPathEndogenes>
            </li>
        </modExtensions>
	</VREAndroids.AndroidGeneDef>
</Defs>